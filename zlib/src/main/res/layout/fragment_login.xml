<?xml version="1.0" encoding="utf-8"?>
<custom.SmartView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titleView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:back="false"
    app:centerText="登录"
    app:mode="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <custom.SmartView
            android:id="@+id/phone"
            style="@style/login"
            android:layout_marginHorizontal="55dp"
            app:mode="login" />

        <custom.SmartView
            android:id="@+id/captcha"
            style="@style/login"
            android:layout_marginHorizontal="55dp"
            app:checkId="@id/phone"
            app:mode="captcha" />

        <custom.SmartView
            android:id="@+id/password"
            style="@style/login"
            android:layout_marginHorizontal="55dp"
            app:checkId="@id/phone"
            app:mode="password" />

        <custom.SmartView
            android:id="@+id/checkPassword"
            style="@style/login"
            android:layout_marginHorizontal="55dp"
            app:checkId="@id/password"
            app:leftText="确认密码"
            app:mode="password" />

        <background.view.BLTextView
            android:id="@+id/login"
            style="@style/login"
            android:layout_marginHorizontal="55dp"
            android:paddingVertical="10dp"
            android:text="@string/str_login"
            app:bl_corners_radius="25dp"
            app:bl_pressed_solid_color="@color/colorTheme88"
            app:bl_unEnabled_solid_color="@color/colorTheme88"
            app:bl_unPressed_solid_color="@color/colorTheme"
            tools:ignore="MissingPrefix" />

        <background.view.BLTextView
            android:id="@+id/next"
            style="@style/login"
            android:layout_marginHorizontal="55dp"
            android:paddingVertical="10dp"
            android:text="@string/str_next"
            app:bl_corners_radius="25dp"
            app:bl_pressed_solid_color="@color/colorTheme88"
            app:bl_unEnabled_solid_color="@color/colorTheme88"
            app:bl_unPressed_solid_color="@color/colorTheme"
            tools:ignore="MissingPrefix" />

        <background.view.BLTextView
            android:id="@+id/register"
            style="@style/login"
            android:layout_marginHorizontal="55dp"
            android:paddingVertical="10dp"
            android:text="@string/str_register"
            app:bl_corners_radius="25dp"
            app:bl_pressed_solid_color="@color/colorTheme88"
            app:bl_unEnabled_solid_color="@color/colorTheme88"
            app:bl_unPressed_solid_color="@color/colorTheme" />
    </LinearLayout>
</custom.SmartView>