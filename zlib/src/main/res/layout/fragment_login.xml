<?xml version="1.0" encoding="utf-8"?>
<custom.SmartView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titleView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:back="false"
    app:centerText="登录"
    app:mode="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <custom.SmartView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="32dp"
            android:visibility="gone"
            app:mode="login"
            tools:visibility="visible" />

        <custom.SmartView
            android:id="@+id/captcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="32dp"
            android:visibility="gone"
            app:checkId="@id/phone"
            app:mode="captcha"
            tools:visibility="visible" />

        <custom.SmartView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="32dp"
            android:visibility="gone"
            app:checkId="@id/phone"
            app:mode="password"
            tools:visibility="visible" />

        <custom.SmartView
            android:id="@+id/checkPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="32dp"
            android:visibility="gone"
            app:checkId="@id/password"
            app:leftText="确认密码"
            app:mode="password"
            tools:visibility="visible" />

        <background.view.BLTextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="@string/str_login"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:bl_corners_radius="25dp"
            app:bl_pressed_solid_color="@color/colorTheme88"
            app:bl_unEnabled_solid_color="@color/colorTheme88"
            tools:ignore="MissingPrefix"
            tools:visibility="visible" />

        <background.view.BLTextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="@string/str_next"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:bl_corners_radius="25dp"
            app:bl_pressed_solid_color="@color/colorTheme88"
            app:bl_unEnabled_solid_color="@color/colorTheme88"
            tools:ignore="MissingPrefix"
            tools:visibility="visible" />

        <background.view.BLTextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="@string/str_register"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:bl_corners_radius="25dp"
            app:bl_pressed_solid_color="@color/colorTheme88"
            app:bl_unEnabled_solid_color="@color/colorTheme88"
            tools:ignore="MissingPrefix"
            tools:visibility="visible" />
    </LinearLayout>
</custom.SmartView>