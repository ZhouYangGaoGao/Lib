<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/mBg"
            android:layout_width="match_parent"
            android:src="@mipmap/bg_code"
            android:scaleType="centerCrop"
            android:layout_height="200dp"/>

        <background.view.BLImageView
            android:id="@+id/mIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />

        <custom.TextView
            android:layout_width="wrap_content"
            android:id="@+id/mPhone"
            android:text="17600117227"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/dim_big_title_size"
            android:textColor="@color/clo_big_title"
            android:layout_below="@id/mIcon"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <custom.TextView
        android:id="@+id/mCollect"
        style="@style/my_text"
        android:text="我的收藏" />

    <custom.TextView
        android:id="@+id/mTheme"
        style="@style/my_text"
        android:text="黑白" />

    <custom.TextView
        android:id="@+id/mUpDate"
        style="@style/my_text"
        android:text="更新" />

    <custom.TextView
        android:id="@+id/mLogout"
        style="@style/my_text"
        android:text="退出登录" />


</LinearLayout>

